# Production Environment Variables
NODE_ENV=production

# Application URLs
NEXT_PUBLIC_APP_URL=https://smartdryers.itedasolutions.com
NEXT_PUBLIC_API_URL=https://api.smartdryers.itedasolutions.com

# Database Configuration (Update with your production database)
DATABASE_URL=postgresql://username:password@localhost:5432/iteda_production

# JWT Configuration (Use a strong secret in production)
JWT_SECRET=your-super-secure-jwt-secret-here-change-this

# SSL Configuration
SSL_CERT_PATH=/etc/letsencrypt/live/smartdryers.itedasolutions.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/smartdryers.itedasolutions.com/privkey.pem

# CORS Origins
ALLOWED_ORIGINS=https://smartdryers.itedasolutions.com,https://api.smartdryers.itedasolutions.com

# Production flags
DEBUG=false
LOG_LEVEL=error

# Security
SECURE_COOKIES=true
CSRF_SECRET=your-csrf-secret-here

# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000
