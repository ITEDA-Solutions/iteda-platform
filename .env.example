# =============================================================================
# ITEDA Smart Dry Monitor - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env files with real credentials to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# NODE ENVIRONMENT
# -----------------------------------------------------------------------------
# Options: development, production, test
NODE_ENV=development

# -----------------------------------------------------------------------------
# SUPABASE CONFIGURATION (Required)
# -----------------------------------------------------------------------------
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api

# Your Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Public anon key (safe to expose in browser)
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxx

# Service role key (NEVER expose in browser - server-side only)
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxx

# JWT secret from Supabase dashboard
SUPABASE_JWT_SECRET=your-supabase-jwt-secret

# Project ID (found in your Supabase URL)
NEXT_PUBLIC_SUPABASE_PROJECT_ID=your-project-id

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION (Required)
# -----------------------------------------------------------------------------
# Get connection string from: Supabase Dashboard > Settings > Database

# Main connection URL (use pooler for serverless/edge)
# Format: postgres://[user].[project]:[password]@[host]:[port]/[database]
DATABASE_URL=postgres://postgres.your-project-id:your-password@aws-0-region.pooler.supabase.com:6543/postgres?pgbouncer=true

# For local development with PostgreSQL:
# DATABASE_URL=postgresql://postgres:your-local-password@localhost:5432/smart_dry_monitor

# SSL configuration (set to "false" if having SSL issues in development)
DATABASE_SSL_REJECT_UNAUTHORIZED=true

# -----------------------------------------------------------------------------
# AUTHENTICATION (Required)
# -----------------------------------------------------------------------------
# Custom JWT secret for application authentication
# Generate with: openssl rand -base64 32
JWT_SECRET=your-secure-jwt-secret-min-32-characters

# -----------------------------------------------------------------------------
# APPLICATION URLS
# -----------------------------------------------------------------------------
# Base URL of your application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API URL (usually same as app URL for Next.js)
NEXT_PUBLIC_API_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# EMAIL SERVICE (Optional)
# -----------------------------------------------------------------------------
# Provider options: console (logs to console), sendgrid, resend, smtp
EMAIL_PROVIDER=console

# API key for your email provider (if using sendgrid/resend)
EMAIL_API_KEY=

# From address for outgoing emails
EMAIL_FROM=noreply@itedasolutions.com

# -----------------------------------------------------------------------------
# DEVELOPMENT ONLY (Optional)
# -----------------------------------------------------------------------------
# Enable debug mode (logs additional info)
DEBUG=false

# Log level: error, warn, info, debug
LOG_LEVEL=info

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000

# -----------------------------------------------------------------------------
# SSL CONFIGURATION - Local Development Only (Optional)
# -----------------------------------------------------------------------------
# Only needed if running HTTPS locally with custom domain
# SSL_CERT_PATH=./certs/localhost.pem
# SSL_KEY_PATH=./certs/localhost-key.pem

# -----------------------------------------------------------------------------
# ADDITIONAL POSTGRES URLS (Reference Only)
# -----------------------------------------------------------------------------
# These are alternative connection formats from Supabase
# Usually you only need DATABASE_URL above

# Direct connection (bypasses connection pooler - for migrations)
# POSTGRES_URL_NON_POOLING=postgres://postgres.project:password@aws-0-region.pooler.supabase.com:5432/postgres

# Individual connection details (for tools that need them separately)
# POSTGRES_HOST=db.your-project-id.supabase.co
# POSTGRES_DATABASE=postgres
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=your-password
